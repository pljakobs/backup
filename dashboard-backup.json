          "query": "// Direct query for host status with explicit field names\nfrom(bucket: \"backup\")\n  |> range(start: -24h)\n  |> filter(fn: (r) => r._measurement == \"backup_host_status\")\n  |> drop(columns: [\"_start\", \"_stop\"])\n  |> pivot(rowKey: [\"host\"], columnKey: [\"_field\"], valueColumn: \"_value\")\n  |> map(fn: (r) => ({\n      _time: r._time,\n      Host: r.host,\n      Status: if exists r.status_numeric then r.status_numeric else 0.0,\n      Size: if exists r.size_bytes then r.size_bytes else 0,\n      \"Last Run\": if exists r.last_run_timestamp then time(v: int(v: r.last_run_timestamp)) else now()\n    }))",
          "refId": "A"
        }
      ],
