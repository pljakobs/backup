          "query": "// Direct query for volume status\nfrom(bucket: \"backup\")\n  |> range(start: -24h)\n  |> filter(fn: (r) => r._measurement == \"backup_volume_status\")\n  |> filter(fn: (r) => \n    if \"${host}\" == \"All\" or \"${host}\" == \"\" then true\n    else r.host == \"${host}\"\n  )\n  |> filter(fn: (r) => r._field == \"status_numeric\" or r._field == \"exit_code\" or r._field == \"bytes_sent\" or r._field == \"bytes_received\" or r._field == \"transfer_rate\" or r._field == \"total_size\" or r._field == \"speedup\")\n  |> map(fn: (r) => ({r with _value: string(v: r._value)}))\n  |> group(columns: [\"host\", \"path\", \"_field\"])\n  |> last()\n  |> group(columns: [\"host\", \"path\"])\n  |> pivot(rowKey: [\"host\", \"path\"], columnKey: [\"_field\"], valueColumn: \"_value\")\n  |> map(fn: (r) => ({\n      Host: r.host,\n      Path: r.path,\n      Status: if exists r.status_numeric then float(v: r.status_numeric) else 0.0,\n      \"Exit Code\": if exists r.exit_code then int(v: r.exit_code) else 0,\n      \"Bytes Sent\": if exists r.bytes_sent then int(v: r.bytes_sent) else 0,\n      \"Bytes Received\": if exists r.bytes_received then int(v: r.bytes_received) else 0,\n      \"Transfer Rate\": if exists r.transfer_rate then int(v: r.transfer_rate) else 0,\n      \"Total Size\": if exists r.total_size then int(v: r.total_size) else 0,\n      Speedup: if exists r.speedup then float(v: r.speedup) else 0.0,\n      _time: r._time\n    }))",
          "refId": "A"
        }
      ],
