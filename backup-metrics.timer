# This timer provides optional additional periodic collection if desired.
Requires=backup-metrics.service

[Timer]
# Uncomment the next two lines for optional periodic metrics collection
# OnCalendar=daily
# Persistent=true

[Install]
# WantedBy=timers.target  # Uncomment to enable periodic collection
